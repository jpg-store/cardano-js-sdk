{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "composite": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "declarationMap": true,
    "noEmitOnError": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@cardano-sdk/*": ["./src/*/src"]
    }
  },
  "references": [
    { "path": "./src/cardano-services" },
    { "path": "./src/cardano-services-client" },
    { "path": "./src/core" },
    { "path": "./src/crypto" },
    { "path": "./src/dapp-connector" },
    { "path": "./src/e2e" },
    { "path": "./src/golden-test-generator" },
    { "path": "./src/governance" },
    { "path": "./src/hardware-ledger" },
    { "path": "./src/hardware-trezor" },
    { "path": "./src/input-selection" },
    { "path": "./src/key-management" },
    { "path": "./src/ogmios" },
    { "path": "./src/projection" },
    { "path": "./src/projection-typeorm" },
    { "path": "./src/tx-construction" },
    { "path": "./src/util" },
    { "path": "./src/util-dev" },
    { "path": "./src/util-rxjs" },
    { "path": "./src/wallet" },
    { "path": "./src/web-extension" }
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
